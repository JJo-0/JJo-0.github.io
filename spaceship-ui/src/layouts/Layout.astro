---
import '@/styles/global.css';
import { SITE } from '@/config';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import SearchModal from '@/components/SearchModal.svelte';
import AdSense from '@/components/AdSense.astro';
import { ClientRouter } from 'astro:transitions';
import JsonLd from '@/components/JsonLd.astro';
import { getWebSiteSchema, getOrganizationSchema, getPersonSchema } from '@/lib/schemas';

// Preload fonts to break critical request chains
import outfitFont400 from '@fontsource/outfit/files/outfit-latin-400-normal.woff2?url';
import outfitFont700 from '@fontsource/outfit/files/outfit-latin-700-normal.woff2?url';
import interFontVar from '@fontsource-variable/inter/files/inter-latin-standard-normal.woff2?url';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  lang?: string;
  robots?: string;
  keywords?: string[];
  publishedTime?: string;
  modifiedTime?: string;
  canonicalUrl?: string;
  ogType?: 'website' | 'article';
  alternateLanguages?: Record<string, string>;
  schema?: Record<string, unknown> | Record<string, unknown>[];
}

const {
  title,
  description,
  ogImage,
  lang,
  robots,
  keywords,
  publishedTime,
  modifiedTime,
  canonicalUrl,
  ogType,
  alternateLanguages,
  schema,
} = Astro.props;
const pageLang = lang || SITE.lang;
const pageTitle = title ? `${title} | ${SITE.title}` : SITE.title;
const pageDescription = description || SITE.desc;
const pageOgImage = new URL(ogImage || SITE.ogImage, Astro.site);
const pageRobots = robots || 'index, follow';
const pageKeywords = keywords?.filter(Boolean) || [];
const pageCanonical = canonicalUrl || new URL(Astro.url.pathname, Astro.site).toString();
const pageOgType = ogType || (publishedTime ? 'article' : 'website');
const ogLocale = pageLang.replace('-', '_');
const alternateLanguageLinks = Object.entries(alternateLanguages || {})
  .filter(([hreflang, href]) => Boolean(hreflang && href))
  .map(([hreflang, href]) => {
    if (href.startsWith('https://') || href.startsWith('http://')) {
      return { hreflang, href };
    }
    const pathname = href.startsWith('/') ? href : `/posts/${href}`;
    return { hreflang, href: new URL(pathname, Astro.site).toString() };
  });

const defaultSchemas = [
  getWebSiteSchema(),
  getOrganizationSchema(),
  getPersonSchema(),
];

const finalSchema = schema
  ? Array.isArray(schema)
    ? [...defaultSchemas, ...schema]
    : [...defaultSchemas, schema]
  : defaultSchemas;

const analyticsId = SITE.googleAnalyticsId;
const isGTM = analyticsId?.startsWith('GTM-');
const adsenseClientId = SITE.adsense?.enabled ? SITE.adsense.clientId : '';

const gtmScript = `
  (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
  'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer','${analyticsId}');
`;

const gaScript = `
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', '${analyticsId}');
`;
---

<html lang={pageLang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preload" href={outfitFont400} as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href={outfitFont700} as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href={interFontVar} as="font" type="font/woff2" crossorigin="anonymous" />

    {analyticsId && <link rel="preconnect" href="https://www.googletagmanager.com" />}
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
    {adsenseClientId && <link rel="preconnect" href="https://pagead2.googlesyndication.com" />}
    {adsenseClientId && <link rel="dns-prefetch" href="https://pagead2.googlesyndication.com" />}

    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    {pageKeywords.length > 0 && <meta name="keywords" content={pageKeywords.join(', ')} />}
    {SITE.googleSiteVerification && (
      <meta name="google-site-verification" content={SITE.googleSiteVerification} />
    )}
    {SITE.naverSiteVerification && (
      <meta name="naver-site-verification" content={SITE.naverSiteVerification} />
    )}
    {SITE.bingSiteVerification && (
      <meta name="msvalidate.01" content={SITE.bingSiteVerification} />
    )}

    <!-- SEO -->
    <link rel="canonical" href={pageCanonical} />
    <link rel="alternate" hreflang={pageLang} href={pageCanonical} />
    {
      alternateLanguageLinks.map((item) => (
        <link rel="alternate" hreflang={item.hreflang} href={item.href} />
      ))
    }
    <meta name="robots" content={pageRobots} />
    <meta name="author" content={SITE.author} />
    <meta name="theme-color" content="#09090b" />
    {Object.values(SITE.social).map((profileUrl) => <link rel="me" href={profileUrl} />)}

    <!-- RSS Feed -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={`${SITE.title} RSS Feed`}
      href="/rss.xml"
    />

    <!-- Theme Initialization -->
    <script is:inline>
      (function () {
        const getThemePreference = () => {
          if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
            return localStorage.getItem('theme');
          }
          return 'system';
        };

        const setDarkClass = () => {
          const checkDark = (theme) => {
            if (theme === 'system') {
              return window.matchMedia('(prefers-color-scheme: dark)').matches;
            }
            return theme === 'dark';
          };

          const isDark = checkDark(getThemePreference());
          const contains = document.documentElement.classList.contains('dark');
          if (isDark && !contains) {
            document.documentElement.classList.add('dark');
          } else if (!isDark && contains) {
            document.documentElement.classList.remove('dark');
          }
        };

        setDarkClass();
        document.addEventListener('astro:after-swap', setDarkClass);
      })();
    </script>

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={pageOgImage} />
    <meta property="og:type" content={pageOgType} />
    <meta property="og:url" content={pageCanonical} />
    <meta property="og:site_name" content={SITE.title} />
    <meta property="og:locale" content={ogLocale} />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    {pageKeywords.map((keyword) => <meta property="article:tag" content={keyword} />)}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={pageOgImage} />

    {
      analyticsId &&
        !isGTM && (
          <script
            async
            type="text/partytown"
            src={`https://www.googletagmanager.com/gtag/js?id=${analyticsId}`}
          />
        )
    }

    {
      analyticsId && (
        <script type="text/partytown" is:inline set:html={isGTM ? gtmScript : gaScript} />
      )
    }

    {
      adsenseClientId && (
        <>
          <meta name="google-adsense-account" content={adsenseClientId} />
          <script
            async
            src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${adsenseClientId}`}
            crossorigin="anonymous"
          />
        </>
      )
    }

    <JsonLd schema={finalSchema} />

    <ClientRouter fallback="swap" />
    <base href={SITE.base} />
  </head>
  <body class="bg-background text-foreground min-h-screen">
    {
      isGTM && (
        <noscript>
          <iframe
            src={`https://www.googletagmanager.com/ns.html?id=${analyticsId}`}
            height="0"
            width="0"
            style="display:none;visibility:hidden"
          />
        </noscript>
      )
    }
    <div class="max-w-5xl 3xl:max-w-7xl mx-auto container-padding">
      <Header />
      <main class="py-12 sm:py-16 lg:py-24">
        <slot />
      </main>
      <AdSense />
      <Footer />
      <SearchModal client:idle />
    </div>
  </body>
</html>
